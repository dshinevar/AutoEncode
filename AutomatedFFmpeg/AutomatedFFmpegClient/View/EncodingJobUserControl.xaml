<UserControl x:Class="AutomatedFFmpegClient.View.EncodingJobUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomatedFFmpegClient.View"
			 xmlns:data="clr-namespace:AutomatedFFmpegUtilities.Data;assembly=AutomatedFFmpegUtilities"
             mc:Ignorable="d"
			 x:Name="uc"
             d:DesignHeight="450" d:DesignWidth="400">
	<Border CornerRadius="10" BorderBrush="Black" BorderThickness="3">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition Height="6*"/>
			</Grid.RowDefinitions>
			<TextBlock Grid.Row="0" Text="{Binding Path=EncodingJob.Name, ElementName=uc}" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
			<TextBlock Grid.Row="1" Text="{Binding Path=EncodingJob.Status, ElementName=uc}" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
		</Grid>
	</Border>
</UserControl>
